<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/design_default_color_primary">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/navHeader_profile_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="45dp"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/design_default_color_secondary">

        <ImageView
            android:id="@+id/navHeader_image_profile_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/navHeader_profile_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="Konstantin Konstantinopolski"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/navHeader_profile_photo"
        app:layout_constraintTop_toBottomOf="@+id/navHeader_profile_photo" />

    <TextView
        android:id="@+id/navHeader_profile_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="6dp"
        tools:text="+7 (999) 111-11-11"
        app:layout_constraintStart_toStartOf="@+id/navHeader_profile_full_name"
        app:layout_constraintTop_toBottomOf="@+id/navHeader_profile_full_name" />

</androidx.constraintlayout.widget.ConstraintLayout>